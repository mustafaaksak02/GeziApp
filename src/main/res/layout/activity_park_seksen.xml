<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".parkSeksen">

    <ImageView
        android:id="@+id/imageSeksen"
        android:layout_width="411dp"
        android:layout_height="263dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSeksen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/binde_devri_alem_park"
        tools:srcCompat="@drawable/binde_devri_alem_park" />

    <RatingBar
        android:id="@+id/ratingSeksen"
        android:stepSize="1"
        android:max="5"
        android:layout_width="244dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonKaydetSeksen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksenBilgi" />

    <TextView
        android:id="@+id/tvSeksenUcret"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="10dp"
        android:text="Giriş Ücreti: 10 TL"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSeksenSaat"
        app:layout_constraintEnd_toStartOf="@+id/tvSeksenOy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksen" />

    <TextView
        android:id="@+id/tvSeksenSaat"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Açılış Kapanış Saati: 09:00-17:30"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSeksenBilgi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksenUcret" />

    <TextView
        android:id="@+id/tvSeksenOy"
        android:layout_width="148dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Kullanıcı Oyları: 3.5/5"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSeksenSaat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvSeksenUcret"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksen" />

    <Button
        android:id="@+id/buttonKaydetSeksen"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="oy ver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingSeksen"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksenBilgi" />

    <TextView
        android:id="@+id/tvSeksenBilgi"
        android:layout_width="0dp"
        android:layout_height="149dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Meram ilçesinde, kurulu alanı 80 bin metrekare olduğundan &quot;80 Binde Devr-i Alem Parkı&quot; adı verilen parkta, çok sayıda masal kahramanı, 120 minyatür eser ile 50 hareketli ve sesli dinozor maketi bulunuyor."
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/ratingSeksen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSeksenSaat" />

    <TextView
        android:id="@+id/tvSeksen"
        android:layout_width="384dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="80 BİNDE DEVR-İ ALEM PARKI"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSeksenUcret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSeksen" />

</androidx.constraintlayout.widget.ConstraintLayout>